<layer ui_SpeedCam z=30>
	<BUTTON	btnSC_Type   template=btntext   x=80  y=40  z=0 w=92    bmp="$speedcam_bg.bmp#2" text="Camera Type" align="CENTER" valign="BOTTOM-5" onrelease='run sc_SelectCameraType' clicked_coloring=1>
