	<TEXT   txtSC_Speed       template=txt_csu_legend   y=165  text="Camera Speed:">
	<TEXT   txtSC_SpeedValue  template=txt_csu_value    y=165  >
	<TEXT   txtSC_SpeedUnit   template=txt_csu_unit     y=165  >
