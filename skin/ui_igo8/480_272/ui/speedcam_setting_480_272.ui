	<TEXT       txtSWC_LangType      template=btntext            y=117 text="Warning sound:">

	<TEXT       xxx          template=txt_csu_legend y=149 w=170 text="Speedcam warning volume">
	<SPRITE     xxx	         template=spr_5a         y=149>
	<HSCROLLBAR xxx	         template=csuszka        y=142  min=0 max=64 endsize=0 blockincrement=_0.0 value=64 onrelease='PLAYSOUND "!alert5"' nosound valuemodel="ui.vSpeedcamAlertVolume">


        <BUTTON     xxx                  template=btn_lb5e51  x=33   y=190 z=20  iconspr="$speed_cams_transp.spr" iconphase=0 onrelease='run sc_SettingSpeedCamCategory 0'> 
        <BUTTON     xxx                  template=btn_lb5e51  x=122  y=190 z=20  iconspr="$speed_cams_transp.spr" iconphase=1 onrelease='run sc_SettingSpeedCamCategory 1'> 
        <BUTTON     xxx                  template=btn_lb5e51  x=211  y=190 z=20  iconspr="$speed_cams_transp.spr" iconphase=2 onrelease='run sc_SettingSpeedCamCategory 2'> 
        <BUTTON     xxx                  template=btn_lb5e51  x=301 y=190 z=20  iconspr="$speed_cams_transp.spr" iconphase=3 onrelease='run sc_SettingSpeedCamCategory 3'> 
        <BUTTON     xxx                  template=btn_lb5e51  x=390 y=190 z=20  iconspr="$speed_cams_transp.spr" iconphase=4 onrelease='run sc_SettingSpeedCamCategory 4'> 
</layer>


; New Layer for speedcam category settings
<layer ui_SettingSpeedCamCategory z=35>
	<TEXT       xxx                  template=btntext           y=33 z=30 w=85  text="Alert sound:">
	<SLIDER     xxx                  template=sld_lb5f       x=33   y=21 z=10 w=84  align="RIGHT-8" var=tmpSpeedcamAlertSound value="Alert 1|1|Alert 2|2|Alert 3|3|Alert 4|4|Alert 5|5|Alert 6|6|User Alert 1|7|User Alert 2|8|User Alert 3|9|User Alert 4|10|User Alert 5|11">
	<SLIDER     xxx                  template=sld_lb5f       x=209 y=21 z=20 align="CENTER" padding=4 var=tmpSpeedcamAlertInterval value="Once per overspeed|-2|Off|-1|Continuosly|0|At 1 interval|1|At 2 intervals|2|At 3 intervals|3|At 4 intervals|4|At 5 intervals|5|At 10 intervals|10|At 15 intervals|15|At 20 intervals|20|At 25 intervals|25|At 30 intervals|30|At 40 intervals|40|At 50 intervals|50">
	<BUTTON     xxx                  template=btn_lb5e       x=390 y=21 z=10 text="test" onrelease='run sc_SpeedcamAlertTestSound'> 

	<CHECKBOX   xxx                   template=chk_lb5a      y=64       text="Warning beeps" boolmodel="ui.tmpSpeedcamBeep">

	<SPRITE     xxx          bmp="btn_lb_5a.bmp#2"       x=33  y=105  z=0 >
	<TEXT	    txtSWC_AlertDistance   template=btntext  y=117 w=115 text="Alert distance:">
	<TEXT       txtSWC_AlertDistanceV  template=btntext  x=385 y=117 align="RIGHT">
